<Window x:Class="Spacebridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spacebridge"
        mc:Ignorable="d"
        Title="Spacebridge" Height="400" Width="450"
        Closing="Window_Closing">
    <Grid>
        <Label Content="API Key:" HorizontalAlignment="Left" Margin="30,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.486,0.753"/>
        <PasswordBox HorizontalAlignment="Left" Margin="96,11,0,0" VerticalAlignment="Top" Width="220"/>
        <ScrollViewer Margin="0,75,0,65">
            <Grid>
                <ComboBox HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Width="120"/>
                <TextBox HorizontalAlignment="Left" Margin="185,20,0,0" Text="Local" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" Height="22"/>
                <TextBox HorizontalAlignment="Left" Margin="265,20,0,0" Text="Remote" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" Height="22"/>
                <Button Content="Connect" HorizontalAlignment="Left" Margin="350,20,0,0" VerticalAlignment="Top"/>
                <Ellipse HorizontalAlignment="Left" Height="18" Margin="16,22,0,0" Stroke="Black" VerticalAlignment="Top" Width="18"/>
            </Grid>
        </ScrollViewer>
        <Label Content="Device" HorizontalAlignment="Left" Margin="80,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Local Port" HorizontalAlignment="Left" Margin="184,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Remote Port" HorizontalAlignment="Left" Margin="260,45,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Content="Add Device" HorizontalAlignment="Left" Margin="350,329,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
